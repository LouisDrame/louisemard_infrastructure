* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.container {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    padding: 3rem;
    max-width: 500px;
    text-align: center;
    backdrop-filter: blur(10px);
}

h1 {
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    font-weight: 300;
}

h2 {
    color: #667eea;
    font-size: 1.8rem;
    margin-bottom: 1rem;
    font-weight: 400;
}

p {
    color: #666;
    font-size: 1.1rem;
    margin-bottom: 2rem;
    line-height: 1.5;
}

.status {
    text-align: left;
    margin: 2rem 0;
}

.status-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.8rem;
    font-size: 1rem;
}

.status-icon {
    font-size: 1.2rem;
    margin-right: 0.8rem;
    min-width: 1.5rem;
}

footer {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
    color: #888;
    font-size: 0.9rem;
}

footer p {
    margin-bottom: 0.5rem;
}

/* Animation subtile */
.container {
    animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 600px) {
    .container {
        margin: 1rem;
        padding: 2rem;
    }
    
    h1 {
        font-size: 2rem;
    }
    
    h2 {
        font-size: 1.5rem;
    }
}